<?xml version="1.0"?>

<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root" label="Root">
        <block class="Magecom\ViewedProducts\Block\Adminhtml\Product\Edit\Tab\Viewed" name="catalog.product.edit.tab.viewed"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="viewed_grid_serializer">
            <arguments>
                <argument name="input_names" xsi:type="string">position</argument>
                <argument name="grid_block" xsi:type="string">catalog.product.edit.tab.viewed</argument>
                <argument name="callback" xsi:type="string">getSelectedViewedProducts</argument>
                <argument name="input_element_name" xsi:type="string">links[viewed]</argument>
                <argument name="reload_param_name" xsi:type="string">products_viewed</argument>
            </arguments>
        </block>
    </container>
</layout>
